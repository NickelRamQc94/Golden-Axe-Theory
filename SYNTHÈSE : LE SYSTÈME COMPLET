# (Exemple conceptuel) Analyse de tes donn√©es journali√®res
import pandas as pd
import matplotlib.pyplot as plt

# Suppose que tu as un fichier CSV 'psoriasis_log.csv' avec tes notes
# Colonnes : date, rougeur, epaississement, demangeaison, stress, sommeil, poussee (Oui/Non)
data = pd.read_csv('psoriasis_log.csv')
data['Pi_N_brut'] = data['rougeur'] + data['epaississement'] + data['demangeaison']

# 1. Visualisation
plt.figure(figsize=(12, 4))
plt.plot(data['date'], data['Pi_N_brut'], marker='o', label='Œ†_N brut')
plt.axhline(y=10, color='r', linestyle='--', alpha=0.5, label='Seuil hypoth√©tique (Œ†_crit?)')
plt.fill_between(data['date'], 10, data['Pi_N_brut'], where=(data['Pi_N_brut'] > 10), color='red', alpha=0.3)
plt.scatter(data[data['poussee']=='Oui']['date'], data[data['poussee']=='Oui']['Pi_N_brut'], color='darkred', s=100, label='Pouss√©e d√©clar√©e', zorder=5)
plt.legend()
plt.title('√âvolution de ton Œ†_N personnel')
plt.xticks(rotation=45)
plt.tight_layout()
plt.show()

# 2. Corr√©lation avec les MENeS contextuels
# Calculer une corr√©lation simple entre Pi_N_brut et le stress par exemple
correlation = data[['Pi_N_brut', 'stress', 'sommeil']].corr()
print("Matrice de corr√©lation :")
print(correlation)
