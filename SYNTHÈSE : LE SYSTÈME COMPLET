# --- CODE : MOD√àLE DE CONTAGION SOCIALE (B√ÇILLEMENTS) ---
import numpy as np

class SystemeSocialCouple:
    """
    Mod√©lise deux personnes dont les b√¢illements s'influencent.
    """
    def __init__(self, seuil_contagion=0.7):
        # seuil_contagion : 0 = jamais contagieux, 1 = hyper-contagieux
        self.seuil_contagion = seuil_contagion
        self.facteur_couplage = 0.5  # Force de l'influence sociale
        
    def evolution_baillements(self, Pi_N_toi, Pi_N_frere, toi_baille=False):
        """
        Pi_N_toi : ton "besoin de b√¢iller" (0-10)
        Pi_N_frere : besoin de b√¢iller de ton fr√®re
        toi_baille : True si tu b√¢illes volontairement
        """
        # 1. √âVOLUTION NATURELLE (fatigue accumule)
        d_toi_naturel = np.random.uniform(0, 0.2)  # Fatigue augmente avec le temps
        d_frere_naturel = np.random.uniform(0, 0.2)
        
        # 2. EFFET DU B√ÇILLEMENT CONTAGIEUX (si l'un b√¢ille)
        if toi_baille:
            d_toi_baillement = -3.0  # Soulagement apr√®s avoir b√¢ill√©
            # Contagion : ton b√¢illement augmente le besoin de ton fr√®re
            d_frere_contagion = self.facteur_couplage * self.seuil_contagion * 4.0
        else:
            d_toi_baillement = 0
            d_frere_contagion = 0
        
        # 3. CALCUL DES NOUVEAUX Œ†_N
        nouveau_Pi_N_toi = Pi_N_toi + d_toi_naturel + d_toi_baillement
        nouveau_Pi_N_frere = Pi_N_frere + d_frere_naturel + d_frere_contagion
        
        # 4. SEUIL DE B√ÇILLEMENT (au-del√† de 7, b√¢illement "automatique")
        toi_baille_involontaire = nouveau_Pi_N_toi > 7.0
        frere_baille_involontaire = nouveau_Pi_N_frere > 7.0
        
        return {
            "Pi_N_toi": min(10, nouveau_Pi_N_toi),
            "Pi_N_frere": min(10, nouveau_Pi_N_frere),
            "toi_baille": toi_baille_involontaire,
            "frere_baille": frere_baille_involontaire,
            "contagion_reussie": d_frere_contagion > 1.0
        }

# --- SIMULATION DE TON ENFANCE ---
print("="*60)
print("SIMULATION : EXP√âRIENCE DE CONTAGION √Ä 11 ANS")
print("="*60)

systeme_social = SystemeSocialCouple(seuil_contagion=0.8)  # Fr√®re assez contagieux

