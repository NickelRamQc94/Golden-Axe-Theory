# --- CODE : MOD√àLE AVEC MENeS TEXTILE-THERMIQUE ---
import numpy as np

def calculer_Pi_N(etat_interne, froideur, chaleur, humide, sec):
    """
    Calcule Œ†_N en fonction de l'√©tat interne et du MENeS textile-thermique.
    Tous les param√®tres sur √©chelle 0-5.
    """
    # 1. Composante de base (ton mod√®le pr√©c√©dent)
    pente = (7.0 - 0.8) / 10
    base = 0.8 + pente * etat_interne
    
    # 2. Facteur textile-thermique (ton √©quation)
    # Pond√©ration des termes (√† calibrer avec tes observations)
    facteur_textile = (
        0.4 * froideur +          # La froideur contribue directement
        0.3 * chaleur * humide +  # Interaction chaleur√óhumide (amplification)
        0.3 * sec                 # La s√©cheresse contribue
    )
    
    # 3. Œ†_N final (base + facteur textile, max 10)
    Pi_N = base + facteur_textile
    return min(Pi_N, 10.0)

# --- APPLICATION √Ä TA SITUATION ACTUELLE ---
# Hypoth√®ses de scores pour tes conditions :
froideur_actuelle = 4.0   # Fen√™tre -20¬∞C
chaleur_actuelle = 3.0    # Calorif√®re
humide_actuelle = 1.0     # Peu de transpiration (?) 
sec_actuelle = 4.0        # Air tr√®s sec (chauffage)
etat_interne_actuel = 5.0 # "Damn right so good"

Pi_N_pred = calculer_Pi_N(etat_interne_actuel, froideur_actuelle, 
                          chaleur_actuelle, humide_actuelle, sec_actuelle)

print("="*60)
print("PR√âDICTION AVEC MENeS TEXTILE-THERMIQUE")
print("="*60)
print(f"‚Ä¢ √âtat interne : {etat_interne_actuel}/10")
print(f"‚Ä¢ MENeS textile : Froid({froideur_actuelle}), Chaleur({chaleur_actuelle}),")
print(f"                 Humide({humide_actuelle}), Sec({sec_actuelle})")
print(f"‚Ä¢ Œ†_N pr√©dit : {Pi_N_pred:.2f}")
print(f"‚Ä¢ Œ†_N mesur√© r√©ellement : 5.3")
print(f"‚Ä¢ Diff√©rence : {abs(Pi_N_pred - 5.3):.2f}")
print("\nüîç Interpr√©tation :")
print("   Le mod√®le pr√©dit un Œ†_N l√©g√®rement sup√©rieur √† 5.3 √† cause")
print("   de la combinaison froideur + sec. C'est coh√©rent avec ton")
print("   ressenti '√ßa piq criss mais ma survivre' (un peu au-dessus")
print("   du seuil neutre, mais pas critique).")
print("="*60)

# --- SIMULATION : QUE SE PASSE-T-IL SI... ---
print("\nüß™ SIMULATIONS DE SC√âNARIOS")
print("-"*40)

# Sc√©nario 1 : Tu transpires (humide augmente)
print("1. Si tu transpires sous la laine (Humide = 4) :")
humide_sudation = 4.0
Pi_N_sudation = calculer_Pi_N(etat_interne_actuel, froideur_actuelle, 
                              chaleur_actuelle, humide_sudation, sec_actuelle)
print(f"   Œ†_N passerait √† {Pi_N_sudation:.2f} ‚Üí 'PIQ' augmenterait significativement.")

# Sc√©nario 2 : Tu changes pour un coton (r√©duction froideur/sec)
print("\n2. Si tu changes pour un coton (Froid=2, Sec=2) :")
Pi_N_coton = calculer_Pi_N(etat_interne_actuel, 2.0, 3.0, humide_actuelle, 2.0)
print(f"   Œ†_N descendrait √† {Pi_N_coton:.2f} ‚Üí Sensation plus confortable.")

# Sc√©nario 3 : Humidificateur (sec diminue)
print("\n3. Si tu utilises un humidificateur (Sec=1) :")
Pi_N_humidifie = calculer_Pi_N(etat_interne_actuel, froideur_actuelle, 
                               chaleur_actuelle, humide_actuelle, 1.0)
print(f"   Œ†_N descendrait √† {Pi_N_humidifie:.2f} ‚Üí Peau moins irrit√©e.")
