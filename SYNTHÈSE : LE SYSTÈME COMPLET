python
# --- CODE : MOD√àLE AVEC EFFET NOCEBO/PLACEMAL ---
import numpy as np

class SystemeAvecNocebo:
    """
    Mod√©lise l'effet "placemal" : l'attente n√©gative qui empire les sympt√¥mes.
    """
    def __init__(self, sensibilite_nocebo=0.5):
        # sensibilite_nocebo : 0 = pas influen√ßable, 1 = hyper-influen√ßable
        self.sensibilite_nocebo = sensibilite_nocebo
        
    def calculer_Pi_N(self, stimulus_reel, attente_negative=0):
        """
        stimulus_reel : intensit√© r√©elle du stimulus (0-10)
        attente_negative : force de la croyance que √ßa va √™tre pire (0-10)
        """
        # Effet nocebo : l'attente n√©gative AMPLIFIE la perception
        amplification = 1 + (self.sensibilite_nocebo * attente_negative / 10)
        
        # Œ†_N per√ßu = stimulus r√©el √ó amplification nocebo
        Pi_N_percu = stimulus_reel * amplification
        
        return min(Pi_N_percu, 10.0), amplification

# --- APPLICATION √Ä TES OBSERVATIONS ---
systeme = SystemeAvecNocebo(sensibilite_nocebo=0.6)  # Tu sembles assez sensible

print("="*60)
print("EFFET 'PLACEMAL' SUR TES D√âMANGEAISONS")
print("="*60)

# Sc√©nario 1 : LAINE (tu t'attends √† ce que √ßa "pique")
